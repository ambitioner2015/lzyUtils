<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lzy.pro.IndexActivity">
    <FrameLayout
        android:id="@+id/fl_activity_main_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/rg_activity_main_bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:checkedButton="@+id/rb_activity_main_bottom_center"
        android:orientation="horizontal">

        <RadioButton
            android:tag="skin"
            android:id="@+id/rb_activity_main_bottom_index"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/ic_demo_one"
            android:gravity="center"
            android:drawablePadding="3dp"
            android:text="首页" />

        <RadioButton
            android:tag="skin"
            android:drawablePadding="3dp"
            android:id="@+id/rb_activity_main_bottom_center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/ic_demo_three"
            android:gravity="center"
            android:text="中心"/>

        <RadioButton
            android:tag="skin"
            android:drawablePadding="3dp"
            android:id="@+id/rb_activity_main_bottom_person"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/ic_demo_four"
            android:gravity="center"
            android:text="个人"
/>

        <RadioButton
            android:tag="skin"
            android:drawablePadding="3dp"
            android:id="@+id/rb_activity_main_bottom_chat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/ic_demo_five"
            android:gravity="center"
            android:text="聊天" />
    </RadioGroup>


</LinearLayout>
